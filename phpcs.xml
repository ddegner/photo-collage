<?xml version="1.0"?>
<ruleset name="PhotoCollage">
    <description>PHPCS ruleset for Photo Collage plugin.</description>

    <config name="minimum_supported_wp_version" value="6.8"/>

    <!-- Use WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
    </rule>

    <!-- Check all PHP files -->
    <file>.</file>

    <!-- Exclude build and node_modules directories -->
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Show progress and colors -->
    <arg value="p"/>
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
</ruleset>
